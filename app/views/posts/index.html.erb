<h1>Post Index</h1>

<% @posts.each do |post| %>
  <%= post.title %>
  <%= post.subtitle %>
  <%= "By: #{User.find_by(id: post.user_id).user_name}" %> <br/>
  <%= post.content %> <br  />
  <% post.categories.each do |category| %>
  Tags: <%= category.tag %>
  <% end %>
  <%= link_to "Edit", edit_post_path(post.id) %>
  <h3><%= post.audits.inspect %></h3>
<% end %>
